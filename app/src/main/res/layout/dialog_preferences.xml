<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/round_corners">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="INDIRIZZO:"/>
    <EditText
        android:id="@+id/indirizzoEdit"
        android:layout_marginLeft="20dp"
        android:hint="Scrivi l'indirizzo del server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="FUNZIONE:"/>
    <EditText
        android:id="@+id/funzioneEdit"
        android:hint="Scrivi la funzione"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="VEL INTERMEDIA MAX:"/>
    <EditText
        android:id="@+id/velIntermMAXEdit"
        android:hint="Scrivi l'indirizzo del server"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="VEL INTERMEDIA MIN:"/>
    <EditText
        android:id="@+id/velIntermMINEdit"
        android:hint="Scrivi l'indirizzo del server"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/SavePreferencesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners"
        android:layout_gravity="center_horizontal"
        android:text="SALVA"/>
</LinearLayout>